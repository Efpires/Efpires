SELECT DISTINCT
  REPLACE(h.name, 'Firewall ', '') AS name,
  hi.location_lat AS lat,
  hi.location_lon AS lon,
  t.value AS status,
  hi.notes AS Notas
FROM triggers t
INNER JOIN functions f       ON t.triggerid = f.triggerid
INNER JOIN items i           ON f.itemid = i.itemid
INNER JOIN hosts h           ON i.hostid = h.hostid
INNER JOIN hosts_groups hg   ON h.hostid = hg.hostid
INNER JOIN hstgrp g          ON hg.groupid = g.groupid
INNER JOIN host_inventory hi ON h.hostid = hi.hostid
WHERE
  g.name LIKE 'Protege/Seguranca/Firewall/%'
  AND t.description ILIKE '%Base%'
  AND h.name NOT ILIKE '%AWS ProtegeCash%'   -- remove AWS ProtegeCash 01/02/VPN
  AND h.name NOT ILIKE '%Datacenter%'        -- remove Firewall Datacenter
  AND h.name NOT ILIKE '%Nova Campinas%'    -- remove Firewall Nova Campinas
  AND h.name NOT ILIKE '%Sao Sebastiao%';
