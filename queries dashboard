SELECT 
  ht.name AS host,
  MAX(CASE WHEN it.key_ LIKE 'system.cpu.util[cpmCPUTotal5minRev.%]' THEN h.value END) AS usecpu,
  MAX(CASE WHEN it.key_ LIKE 'vm.memory.util[vm.memory.util.%]' THEN h.value END) AS usememoria,
  MAX(CASE WHEN it.key_ LIKE 'sensor.temp.value[ciscoEnvMonTemperatureValue.%]' THEN h.value END) AS temperatura,
  MAX(CASE WHEN it.key_ LIKE '%uptime%' THEN hu.value END) AS uptime,
  MAX(DATE_FORMAT(CONVERT_TZ(from_unixtime(hu.clock), '+00:00', '+00:00'), '%d-%m-%Y %H:%i:%s')) AS ultverificacao
FROM items it
INNER JOIN hosts ht ON ht.hostid = it.hostid
INNER JOIN hosts_groups hg ON hg.hostid = ht.hostid
INNER JOIN hstgrp g ON g.groupid = hg.groupid
LEFT JOIN history_uint hu ON it.itemid = hu.itemid
LEFT JOIN history h ON it.itemid = h.itemid
WHERE g.name = $base
  AND (
    it.key_ LIKE 'system.cpu.util[cpmCPUTotal5minRev.%]'
    OR it.key_ LIKE 'vm.memory.util[vm.memory.util.%]'
    OR it.key_ LIKE 'sensor.temp.value[ciscoEnvMonTemperatureValue.%]'
    OR it.key_ LIKE '%uptime%'
  )
GROUP BY ht.name
ORDER BY ht.name;
