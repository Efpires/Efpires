Select count(it.itemid) "Onlines" from items it
inner join hosts ht on ht.hostid = it.hostid
inner join functions f on it.itemid = f.itemid
inner join triggers tg on tg.triggerid = f.triggerid
inner join hosts_groups hg on ht.hostid = hg.hostid
where it.key_ in ('icmpping') and ht.status = 0 
and ht.flags in (0,4) 
and it.status = 0 and tg.status = 0 and tg.state = 0 and tg.value in (0) and hg.groupid = 135;
